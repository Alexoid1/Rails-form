<h2 class='title'>Edit the <%= @user.username %> profile</h2>
<ul>
      <%@user.errors.full_messages.each do |error| %>
      <li><%= error%></li>
      <%end%>
</ul>

<form class='form' accept-charset="UTF-8" action="/users/<%= @user.id %>"  method="post">


    <input name="_method" type="hidden" value="patch" />
    
    <input class='input' type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
    <label for="username">User name:</label>
    <input class='input' type="text" id="username" name="user[username]" value="<%= @user.username %>"><br><br>
    <label for="email">Email:</label>
    <input class='input' type="email" id="email" name="user[email]" value="<%= @user.email %>"><br><br>
    <label for="password">Paassword:</label>
    <input class='input' type="password" id="password" name="user[password]" value="<%= @user.password %>"><br><br>    
    
    <input type="submit" class='submit' value="Update">
</form> 
<a href="/users">User list</a>